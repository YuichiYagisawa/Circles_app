<%= form_for([@circle, @micropost], url: circle_micropost_create_path, method: :post) do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
    <%= form.hidden_field :circle_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
